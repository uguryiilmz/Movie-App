<% include partials/header.ejs %>

<h1 style="text-align:center;color:red" >Add New Movies </h1>

<div class="jumbotron">
  <div class="container" style="width:30%">
    <form action="/movies/<%=movie._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="movie[title]" value="<%=movie.title%>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="movie[image]" value="<%=movie.image%>">
        </div>
        <div class="form-group">
          <textArea class="form-control type="text" name="movie[summary]"> <%=movie.summary%> </textArea>
        </div>
        <div class="form-group">
          <button class="btn btn-primary" style="color:white" >SUBMIT </button>
        </div>
    </form>
  </div>
</div>




