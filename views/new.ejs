<% include partials/header.ejs %>

<h1 style="text-align:center" >Add New Movies </h1>

<div class="jumbotron">
  <div class="container" style="width:30%">
    <form action="/movies" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="movie[title]" placeholder="Movie Title">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="movie[image]" placeholder="Image URL">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="movie[summary]" placeholder="summary">
        </div>
        <div class="form-group">
          <button class="btn btn-primary" style="color:white">SUBMIT </button>
        </div>
    </form>
  </div>
</div>




